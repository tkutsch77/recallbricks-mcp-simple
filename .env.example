# ============================================================================
# RecallBricks MCP Server - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# API Configuration (REQUIRED)
# ----------------------------------------------------------------------------

# RecallBricks API endpoint (Render)
RECALLBRICKS_API_URL=https://recallbricks-api-clean.onrender.com

# RecallBricks API authentication key
RECALLBRICKS_API_KEY=your_api_key_here

# ----------------------------------------------------------------------------
# Reliability Settings
# ----------------------------------------------------------------------------

# Maximum number of retry attempts per request (default: 3)
RECALLBRICKS_MAX_RETRIES=3

# Base delay in milliseconds for exponential backoff (default: 1000)
RECALLBRICKS_BASE_DELAY=1000

# Request timeout in milliseconds (default: 30000 = 30 seconds)
RECALLBRICKS_TIMEOUT=30000

# ----------------------------------------------------------------------------
# Circuit Breaker Configuration
# ----------------------------------------------------------------------------

# Number of consecutive failures before opening circuit (default: 5)
CIRCUIT_BREAKER_THRESHOLD=5

# Time in milliseconds to wait before attempting to close circuit (default: 60000 = 1 minute)
CIRCUIT_BREAKER_TIMEOUT=60000

# ----------------------------------------------------------------------------
# Caching
# ----------------------------------------------------------------------------

# Cache time-to-live in milliseconds (default: 3600000 = 1 hour)
CACHE_TTL=3600000

# ----------------------------------------------------------------------------
# Monitoring & Health Checks
# ----------------------------------------------------------------------------

# Enable structured JSON logging for metrics (default: true)
ENABLE_METRICS=true

# Enable periodic health checks (default: true)
ENABLE_HEALTH_CHECKS=true

# Health check interval in milliseconds (default: 300000 = 5 minutes)
HEALTH_CHECK_INTERVAL=300000

# ----------------------------------------------------------------------------
# Validation
# ----------------------------------------------------------------------------

# Maximum allowed length for memory text in characters (default: 10000)
MAX_MEMORY_TEXT_LENGTH=10000

# ============================================================================
# Preset Configurations
# ============================================================================

# PRODUCTION (High traffic, high reliability)
# RECALLBRICKS_MAX_RETRIES=5
# CIRCUIT_BREAKER_THRESHOLD=10
# CACHE_TTL=7200000
# ENABLE_METRICS=true
# ENABLE_HEALTH_CHECKS=true

# DEVELOPMENT (Fast feedback, minimal overhead)
# RECALLBRICKS_MAX_RETRIES=1
# ENABLE_METRICS=false
# ENABLE_HEALTH_CHECKS=false
# RECALLBRICKS_TIMEOUT=10000

# LOW LATENCY (Quick responses, fewer retries)
# RECALLBRICKS_MAX_RETRIES=2
# RECALLBRICKS_TIMEOUT=10000
# RECALLBRICKS_BASE_DELAY=500
